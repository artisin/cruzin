{
  "name": "cruzin",
  "version": "0.0.1",
  "description": "A mordern MVC-less Webpack buildtool for cruzin",
  "license": "MIT",
  "author": "te schultz",
  "repository": "git://github.com/artisin/cruzin.git",
  "scripts": {
    "build": "npm run prod",
    "clean": "node __internals__/scripts/clean.js",
    "dev": "npm run clean && cross-env NODE_ENV=development webpack --config __internals__/webpack/webpack.dev.js --color --hide-modules --progress --watch",
    "presetup": "npm i colur shelljs",
    "prod": "npm run clean && cross-env NODE_ENV=production webpack --config __internals__/webpack/webpack.prod.js --color --progress",
    "setup": "node ./__internals__/scripts/setup.js",
    "start": "npm run prod",
    "update:all": "ncu --upgradeAll && npm install",
    "test": "mocha __tests__/ --colors --bail --compilers js:babel-core/register",
    "update:check": "ncu",
    "update:dev": "ncu --upgradeAll -d && npm install",
    "update:prod": "ncu --upgradeAll -p && npm install",
    "deploy": "gh-pages -d www"
  },
  "dependencies": {
    "defclass": "0.2.0",
    "intercooler": "git://github.com/LeadDyno/intercooler-js.git",
    "jquery": "3.1.1",
    "ryejs": "0.1.3",
    "whatwg-fetch": "2.0.2",
    "zepto-modules": "1.0.1"
  },
  "devDependencies": {
    "autoprefixer": "6.7.6",
    "babel-core": "6.22.1",
    "babel-loader": "6.2.10",
    "should": "11.2.0",
    "babel-preset-es2015": "6.22.0",
    "browser-sync": "2.18.7",
    "browser-sync-webpack-plugin": "1.1.4",
    "colur": "0.0.3",
    "compression-webpack-plugin": "0.3.2",
    "cross-env": "3.1.4",
    "css-loader": "0.26.1",
    "ctr": "0.3.2-o",
    "del": "2.2.2",
    "extract-loader": "0.1.0",
    "extract-text-webpack-plugin": "2.1.0",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "0.10.0",
    "fs-extra": "2.0.0",
    "gh-pages": "0.12.0",
    "html-loader": "0.4.4",
    "html-webpack-plugin": "2.28.0",
    "image-webpack-loader": " 3.2.0",
    "js-yaml": "3.6.1",
    "json-loader": "0.5.4",
    "json5": "0.5.1",
    "lodash": "4.17.4",
    "mocha": "3.2.0",
    "nconf": "0.8.4",
    "offline-plugin": "4.6.1",
    "postcss-loader": "1.2.2",
    "pug": "2.0.0-beta11",
    "pug-loader": "2.3.0",
    "raw-loader": "0.5.1",
    "shelljs": "0.7.6",
    "style-loader": "0.13.1",
    "stylus": "0.54.5",
    "stylus-loader": "2.4.0",
    "transfer-webpack-plugin": "0.1.4",
    "url-loader": "0.5.7",
    "webpack": "2.2.1",
    "webpack-assets-manifest": "0.6.2",
    "webpack-bundle-analyzer": "2.3.0"
  }
}
